<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WEBSITE NAME</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/jass.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <div class="header container-fluid p-4">
      <div class="row">
        <nav
          class="navbar col-12 col-md-8 justify-content-md-start justify-content-center"
        >
          <ul>
            <li class="my-2">
              <!-- Conditionally render login or logout links -->
              {{#if logged_in}}
                <a id="logout" href="/logout">Logout</a>
              {{else}}
                <a href="/login">Login</a>
              {{/if}}
            </li>
          </ul>
        </nav>
        <div
          class="col-12 col-md-4 text-center box d-flex justify-content-center"
        >
          <h1 class="fs-3 h1El text-uppercase"><a href="/">Web Name</a></h1>
        </div>
      </div>
    </div>

    <main class="mt-1">
      <!-- Render the sub layout -->
      {{{body}}}
    </main>

    <footer></footer>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    ></script>

    <!-- Render script for logged in users only -->

    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}

  </body>

</html>