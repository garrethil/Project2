<body class="signup-page">
  <div class="container">
    <div class="row">
      <div id="left-column" class="col-md-2"></div>
      <!-- Offset column to center content -->
      <div id="main-content" class="signup col-12 col-md-8 mt-5 p-3">
        <form>

          <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" />
          </div>

          <div class="my-3">
            <label for="email" class="form-label">Email address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              aria-describedby="emailHelp"
            />
            <div id="emailHelp" class="form-text">We'll never share your email
              with anyone else.</div>
          </div>

          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" />
          </div>

          <div id="login-link" class="mb-3">
            <a href="/login" class="form-check-label link">Already have an
              account? Login in here!</a>
          </div>

          <div id="submit-button" class="col-md-4 offset-md-4">
            <!-- Centered column -->
            <button type="submit" class="submitBtn">Submit</button>
          </div>

        </form>
      </div>
      <div id="right-column" class="col-md-2"></div>
      <!-- Offset column to center content -->
    </div>
  </div>

  <script src="/js/signup.js"></script>
</body>