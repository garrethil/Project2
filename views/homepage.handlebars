<div class="container-fluid">

  <div class="row">
    <div class="main-header p-5">
      <h2 class="hook">Browse Your Dreams</h2>

      <p>Welcome to your ultimate real estate hub! Whether you're on the hunt
        for your dream home, eager to explore a wide range of listings, ready to
        showcase your property, or seeking expert guidance from our agents,
        we've tailored our platform to meet all your needs. Join us on this
        journey today!</p>

    </div>
  </div>

  <div class="row justify-content-center">
    <div class="featured-items p-4 m-5 text-center">
      <h3 class="fah3">Featured Listings</h3>
    </div>
  </div>

  <!-- Cards Section -->
  <div class="row justify-content-center">
    {{#each listings as |listing|}}
      <div class="col-12 col-md-4 mb-2">
        <div class="card">
          <!-- Property Image -->
          
          <a href="/listings/{{listing.id}}">
          <img
            src="{{listing.imageUrl}}"
            class="card-img-top"
            alt="{{listing.altText}}"
          />

          <!-- Card Body Section -->
          <div class="card-body p-3">

            <p class="card-text detais">Listing Type {{listing.listingType.listing_type}} || Click me!</p>

            <!-- Price -->
            <h5 class="card-title price">${{formatPrice listing.price}}</h5>

            <!-- Address -->
            <p class="card-text address">{{listing.address_name}}</p>

            <!-- Location -->
            <p class="card-text location">Location: {{listing.city.city_name}}</p>

            {{!-- <p class="card-text">Listing Type: {{listing.listing_type}}</p> --}}

            {{!-- <!-- More Information Button -->
            <a href="/listing/{{id}}" class="btn btn-primary">More Information</a> --}}</a>
          
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>